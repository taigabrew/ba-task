{
  "extends": "stylelint-config-recommended",
  "plugins": ["stylelint-scss"],
  "rules": {
    "at-rule-no-unknown": null,
    "scss/at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply"]
      }
    ],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "s", "px", "%", "vh", "vw", "deg"]
  }
}